<div class='d-flex flex-column'>
  <% @users.each do |u| %>
   <div class='d-flex my-2 flex-column flex-md-row'>
     <%= link_to image_tag(u.photo, border: 0, class: 'rounded-circle who-photo mx-2 align-self-center'), user_path(u), class: 'align-self-center' %>
     <div class='d-flex flex-column w-100 justify-content-center'>
         <span class='font-weight-bold text-dark text-center'>
           <%= u.full_name %>
         </span>
       <span class='text-center'>@<%= u.username %></span>
      </div>
       <span class='mx-2 font-weight-bold align-self-center'>
         <%= btn_follow(u) %>
       </span>
   </div>
  <% end %> 
</div>
