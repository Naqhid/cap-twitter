<% if current_user %>
  <div class='bg-left-tab col-4 col-md-3'>
    <div class='d-flex flex-column'>
      <div class='d-flex'>
        <img src='<%= current_user.photo %>' class='profile p-2' alt='<%= current_user.username %>'>
        <span class='align-self-center bold-name'><%= current_user.full_name %></span>
      </div>
      <div class='d-flex justify-content-between'>
        <div class='w-50 border-dark-bl-1 py-2'>
          <span class='text-center d-block light-color'><%= current_user.followers.count %></span>
          <span class='text-center d-block bold-flw'>Following</span>
        </div>
        <div class='w-50 border-dark-bl-2 py-2'>
          <span class='text-center d-block light-color'><%= current_user.followeds.count %></span>
          <span class='text-center d-block bold-flw'>Followers</span>
        </div>
      </div>
    </div>
  </div>
  <div class='col-8 col-md-9 d-flex flex-column'>
<% else %>
  <div class='col-12 d-flex flex-column'>
<% end %>